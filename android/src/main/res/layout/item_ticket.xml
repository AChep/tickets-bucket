<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/departureDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="16 March"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/actionMoreBtn"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dots_vertical"
            app:layout_constraintBottom_toBottomOf="@id/departureDate"
            app:layout_constraintEnd_toEndOf="@id/departureDate"
            app:layout_constraintTop_toTopOf="@id/departureDate" />

        <ImageView
            android:id="@+id/actionQrBtn"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qrcode"
            app:layout_constraintBottom_toBottomOf="@id/departureDate"
            app:layout_constraintEnd_toStartOf="@id/actionMoreBtn"
            app:layout_constraintTop_toTopOf="@id/departureDate" />

        <ImageView
            android:id="@+id/anchor.information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:alpha="0.54"
            android:src="@drawable/ic_train"
            app:layout_constraintBottom_toBottomOf="@id/departureStationName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/departureStationName" />

        <TextView
            android:id="@+id/departureStationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Киев Пассажирский — Днепропетровск Главный"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/anchor.information"
            app:layout_constraintTop_toBottomOf="@id/departureDate" />

        <TextView
            android:id="@+id/trainName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="Поезд 732К"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/anchor.information"
            app:layout_constraintTop_toBottomOf="@id/departureStationName" />

        <TextView
            android:id="@+id/departureDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="16 March, 21:00"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/anchor.information"
            app:layout_constraintTop_toBottomOf="@id/trainName" />

        <TextView
            android:id="@+id/arrivalDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="17 March, 13:00"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/anchor.information"
            app:layout_constraintTop_toBottomOf="@id/departureDatetime" />

        <ImageView
            android:id="@+id/anchor.passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0.54"
            android:src="@drawable/ic_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrivalDatetime" />

        <TextView
            android:id="@+id/carriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:text="Иванов Андрей"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/anchor.passenger"
            app:layout_constraintTop_toBottomOf="@id/arrivalDatetime" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>