<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artemchep.ticketsbucket">

    <application
        android:name=".Heart"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@android:drawable/arrow_up_float"
        android:label="Tickets Bucket"
        android:theme="@style/AppThemeLight.NoActionBar">
        <activity android:name="com.artemchep.ticketsbucket.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.TicketDetailsActivity" />
        <activity android:name=".activities.TicketDetailsQrActivity" />
    </application>

</manifest>